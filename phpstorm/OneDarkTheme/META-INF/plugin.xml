<idea-plugin>
    <id>com.karlm.onedark</id>
    <name>One Dark/Light Theme</name>
    <version>1.1.0</version>
    <vendor>karlm</vendor>
    <description>One Dark and One Light themes with auto-switching based on OS appearance</description>
    <idea-version since-build="233"/>
    <depends>com.intellij.modules.platform</depends>
    <extensions defaultExtensionNs="com.intellij">
        <themeProvider id="com.karlm.onedark" path="/OneDark.theme.json"/>
        <themeProvider id="com.karlm.onelight" path="/OneLight.theme.json"/>
    </extensions>
</idea-plugin>
